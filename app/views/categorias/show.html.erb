<section class="offset-md-1 col-md-10 col-xs-12">
  <div class="my-3 content p-5">

    <div class="w-100 text-center">
      <h1>Detalles de categoría</h1>
      <hr class="teal accent-3 mb-4 mt-0 d-inline-block mx-auto border-dark" style="width: 200px;">
    </div>

    <table class="table table-hover">
      <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col" class="text-center">Nombre</th>
        <th scope="col" class="text-center">Descripcion</th>
        <th scope="col" class="text-center">Imagen</th>
        <th scope="col" class="text-center">Acciones</th>
      </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="row"><%= @categoria.id %></th>
          <td class="text-center"><%= @categoria.nombre %></td>
          <td class="text-center"><%= @categoria.descripcion %></td>
          <td><%= image_tag @categoria.image, style: "max-width:250px", class: "rounded"%></td>
          <td class="text-center">
            <%= link_to 'Editar', edit_categorium_path(@categoria), class: "btn btn-success" %>
            <%= link_to 'Eliminar', @categoria, method: :delete, data: { confirm: "¿Está seguro?" },
                        class: "btn btn-danger", style: "margin-top:3px" %>
          </td>
        </tr>
      </tbody>
    </table>
    <%= link_to "Volver", categorias_path, class: 'btn btn-dark' %>

  </div>
</section>