<div class="container">
  <h1>Detalles de categoría</h1>

  <div class="d-flex my-3">
    <%= link_to 'Ver Categorías', categorias_path, class: "btn btn-secondary" %>
  </div>

  <table class="table table-hover">
    <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nombre</th>
      <th scope="col">Descripcion</th>
      <th scope="col">Imagen</th>
      <th scope="col">Acciones</th>
    </tr>
    </thead>
    <tbody>
      <tr>
        <th scope="row"><%= @categoria.id %></th>
        <td><%= @categoria.nombre %></td>
        <td><%= @categoria.descripcion %></td>
        <td><%= @categoria.img %></td>
        <td class="text-center">
          <%= link_to 'Editar', edit_categorium_path(@categoria), class: "btn btn-primary btn-sm" %>
          <%= link_to 'Eliminar', @categoria, method: :delete, data: { confirm: "¿Está seguro?" }, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    </tbody>
  </table>

</div>