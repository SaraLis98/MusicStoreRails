<div class="container">

  <h1>Editar categoría</h1>

  <form method="POST" action="/categorias/editar/<%= @categoria.id %>" accept-charset="UTF-8" role="form" id="actualizarCategoria" name="actualizarCategoria" enctype="multipart/form-data">

    <!-- Protección CSRF -->
    <%= token_tag nil %>

    <div class="form-group">
      <label for="nombre">Nombre</label>
      <input type="text" class="form-control" id="nombre" value="<%= @categoria.nombre %>">
    </div>
    <div class="form-group">
      <label for="descripcion">Descripción</label>
      <textarea class="form-control" id="descripcion"><%= @categoria.descripcion %></textarea>
    </div>
    <div class="form-group">
      <label for="imagen">Imagen</label>
      <input type="file" class="form-control-file" id="imagen">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>

    <%= link_to 'Cancelar', :back, class: "btn btn-warning" %>
  </form>

</div>